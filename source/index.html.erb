---
title: Sun.ny Wel.come
---
<div class="index-bg-img index-bg-image"></div><!-- ADDED -->

<div class="header">
  <div class="container">
    <div class="row super-margin">
      <div class="col-xs-12 col-md-6">
        <h1>Sun.ny Dre.ams</h1>
        <p>Sunshine your professional life</p>
        <p>Shout out your concerns</p>
        <p>Give a ranking to your employer</p>
        <p>Identify the most respectful work environment</p>
        <button class="btn btn-default btn-lg btn-formating" type="submit">Get a NEW life! Now!</button>
      </div>
    </div>
  </div>
</div>

<!-- Main content -->
<div id="main" class="bg-light-green">
  <div id="main-links" class="content bg-light-green padded text-center">
    <div class="container">
      <!-- Features -->
      <div class="row">
        <% data.index_items.each do |index_item| %>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="card shadowed-box">
              <% link_to index_item.url do %>
                <%= image_tag index_item.image, :class => "nav-icon" %>
                <h2><%= index_item.name %></h2>
                <p><%= index_item.description_1 %></p>
                <% unless index_item.description_2.nil? %>
                  <%= index_item.description_2 %>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div id="newsletter-register" class="bg-light-green padded text-center">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <div class="card text-center">
            <h2 >Receive all the news from Sun.ny Dre.ams</h2>
            <% form_tag '/', :class => 'form-inline', :method => 'put' do %>
            <!-- <form class="form-inline" action="/"> -->
              <div class="form-group">
                <%= label_tag :email, :value => 'Email for newsletter', :for => 'email-for-newsletter', :class => 'sr-only' %>
                <%= input_tag :email, :id => "email-for-newsletter" , :class => "form-control", :name => "email-for-newsletter", :placeholder => "jane.doe@gmail.com" %>
              </div>
              <div class="form-group">
                <%= label_tag :email, :value => 'Submit to register to the newsletter', :for => 'submit-to-newsletter', :class => 'sr-only' %>
                <%= input_tag :submit, :id => "submit-to-newsletter" , :class => "btn btn-default", :name => "submit-to-newsletter", :value => "Register" %>
              </div>
            <!-- </form> -->
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Map -->
  <div id="map" class="padded text-center" style="width: 100%; height: 400px;">
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <div class="card">
            <div id="map" style="width: 100%; height: 400px;"></div>
            <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>
            <script type="text/javascript">
            var myLatlng = new google.maps.LatLng(65.704497, 18.064995);
            var myOptions = {
              zoom: 8,
              center: myLatlng,
              scrollwheel: false,
              mapTypeId: google.maps.MapTypeId.ROADMAP,
              styles: [{"featureType":"road","stylers":[{"visibility":"off"}]},{"featureType":"transit","stylers":[{"visibility":"off"}]},{"featureType":"administrative.province","stylers":[{"visibility":"off"}]},{"featureType":"poi.park","elementType":"geometry","stylers":[{"visibility":"off"}]},{"featureType":"water","stylers":[{"color":"#004b76"}]},{"featureType":"landscape.natural","stylers":[{"visibility":"on"},{"color":"rgba(247, 248, 234, 0.4)"}]},{"featureType":"administrative.country","elementType":"geometry.stroke","stylers":[{"visibility":"on"},{"color":"#7f7d7a"},{"lightness":10},{"weight":1}]}]
            };
            var map = new google.maps.Map(document.getElementById('map'), myOptions);
            var marker = new google.maps.Marker({
              position: myLatlng,
              map: map,
              title: "You are here!"
            });
            </script>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



<!-- Including Bootstrap JS (with its jQuery dependency) so that dynamic components work -->
<%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' %>
<%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js' %>
