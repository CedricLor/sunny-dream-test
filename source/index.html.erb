<div class="bg-img voicings-bg-image">

  <div id="voicingTop" class="header relative-positioned-wrapper window-height">
    <div class="container">
      <div class="row small-top-margin">
        <div class="col-xs-12 col-sm-4"></div>
        <div class="col-xs-12 col-sm-4">
          <h1>Sun.ny Voicings</h1>
          <p>Express yourself!</p>
          <p>This will always stay a SECRET between you and us.</p>
          <p>Your voice matters: confidentially rank the firms!!!</p>
        </div>
        <div class="col-xs-12 col-sm-4"></div>
      </div>
    </div>
  </div>

  <div id="voicingsMain" class="main-section">
    <div id="main-voicings" class="content padded text-center relative-positioned-wrapper">


      <div class="container"><!-- thumbsup and thumbsdown -->
        <!-- Features -->
        <div class="row">
          <% data.thumbs_voicing_items.each do |thumb_voicing_item| %>
            <div class="col-xs-6 col-sm-6 col-md-3 col-md-offset-3">
              <div class="box">
                <% link_to thumb_voicing_item.url do %>
                  <div class="card shadowed-box round-box no-padding no-margin-bottom large-glyph" data-toggle="modal" data-target="#subVoicingItemsModal">
                    <span class="glyphicon <%= thumb_voicing_item.glyphicon %> <%= thumb_voicing_item.color %> vertical-align" aria-hidden="true"></span>
                    <!-- <%= image_tag thumb_voicing_item.image, :class => "voicing-icon" %>-->
                  </div>
                  <p><%= thumb_voicing_item.name %></p>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>


<!-- -->


<div class="modal fade" id="subVoicingItemsModal" role="dialog" aria-labelledby="gridSystemModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="gridSystemModalLabel">Modal title</h4>
        </div>
        <div class="modal-body">
          <div class="container">
            <!-- Features -->
            <div class="row">
              <% data.main_voicing_items.each do |main_voicing_item| %>
                <div class="col-xs-6 col-sm-6 col-md-3">
                  <div class="box">
                    <% link_to main_voicing_item.url do %>
                      <div class="card shadowed-box round-box">
                        <%= image_tag main_voicing_item.image, :class => "voicing-icon" %>
                      </div>
                      <p><%= main_voicing_item.name %></p>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>



    </div>
  </div>
</div>
