---
title: Sun.ny Wel.come
---
<div class="bg-img rankings-bg-image">

  <div class="header relative-positioned-wrapper window-height">
    <div class="container">
      <div class="row small-top-margin">
        <div class="col-xs-12 col-sm-8 col-md-5">
          <div class="card main-header-card">
            <h1>Sun.ny Ran.kings</h1>
            <p>Up to the top!</p>
            <p>Equal opportunity. Diversity!</p>
            <p>Most respectful and respected firms.</p>
            <a href="#voicingTop">
              <button class="btn btn-default btn-lg btn-formating" type="submit">Rate your Company! Now!</button>
            </a>
          </div>
        </div>
      </div>
      <div class="row search-form-margin">
        <div class="col-xs-12 col-md-4 col-md-offset-4 text-center">
          <form>
            <div class="form-group">
              <label class="sr-only" for="searchedCompanyName">Search a company now!</label>
              <input type="text" class="form-control text-center" id="searchedCompanyName" placeholder="Search a company now!">
            </div>
          </form>
        </div>
      </div>
    </div>
    <a href="#rankingsMain">
      <i class="fa fa-angle-down fa-6 pulse scroll-btn scroll-btn-absolute"></i>
    </a>
  </div>

  <div id="rankingsMain" class="main-section">
    <div id="companies-list" class="content padded text-center">
      <div class="container">
        <% data.companies.cosmetics.each do |firm| %>
          <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2">
              <div class="company-container">
                <div class="row">
                  <div class="col-xs-4">
                    <div class="thumbnail shadowed-box thumbnail-company-list width-30vw">
                      <div class="card company-card first-row">
                        <%= image_tag firm.image, :class => "company-icon" %>
                      </div>
                    </div>
                  </div>
                  <div class="col-xs-8">
                    <div class="thumbnail shadowed-box text-left thumbnail-company-list">
                      <div class="card company-card first-row company-rank-name">
                        <h4><span class="badge"><%= "#{firm.ranking}\/5" %></span></h4>
                        <h4><%= link_to firm.name, firm.url %></h4>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-xs-5">
                    <div class="thumbnail shadowed-box text-left thumbnail-company-list width-38vw">
                      <div class="card company-card no-padding-right">
                        <p>Reviews:
                          <span class="badge"><%= firm.voters %></span>
                        </p>
                      </div>
                    </div>
                  </div>
                  <div class="col-xs-7">
                    <div class="thumbnail shadowed-box text-left thumbnail-company-list">
                      <div class="card company-card no-padding-right">
                        <p>Headcount:
                          <span class="badge"><%= firm.number_of_employees %></span>
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-xs-4">
                    <div class="thumbnail shadowed-box text-left thumbnail-company-list">
                      <div class="card">
                        <% link_to '#voicingTop' do %>
                          <button type="button" class="btn btn-default btn-xs">Rate</button>
                        <% end %>
                      </div>
                    </div>
                  </div>
                  <div class="col-xs-4">
                    <div class="thumbnail shadowed-box text-left thumbnail-company-list">
                      <div class="card">
                        <button type="button" class="btn btn-default btn-xs"><i class="fa fa-facebook"></i></button>
                      </div>
                    </div>
                  </div>
                  <div class="col-xs-4">
                    <div class="thumbnail shadowed-box text-left thumbnail-company-list">
                      <div class="card">
                        <button type="button" class="btn btn-default btn-xs"><i class="fa fa-twitter"></i></button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
<!--               <div class="thumbnail shadowed-box text-left">
                <div class="card">
                  <h3><%= "#{firm.ranking}\/5 - " %><%= link_to firm.name, firm.url %></h3>
                  <p><%= "#{firm.name} #{firm.description}" %></p>
                  <p>Total headcount: <%= firm.number_of_employees %></p>
                  <p>Total number of reviews: <%= firm.voters %></p>
                  <p><%= link_to "Read more...", firm.internal_url %></p>
                </div>
              </div> -->
            </div>
<!--             <div class="col-xs-12 col-sm-3">
                <div class="thumbnail shadowed-box text-center">
                  <div class="card">
                    <button type="button" class="btn btn-default btn-xs">Rate this firm!</button>
                    <button type="button" class="btn btn-default btn-xs">Share on <i class="fa fa-facebook"></i></button>
                    <button type="button" class="btn btn-default btn-xs">Tweet it! <i class="fa fa-twitter"></i></button>
                  </div>
                </div>
            </div> -->
          </div>
        <% end %>
      </div>
    </div> <!-- companies-list -->
  </div> <!-- #indexMain -->

</div>
